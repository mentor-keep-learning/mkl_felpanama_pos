<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="TakeAwayReceipt" t-inherit="point_of_sale.OrderReceipt"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]/div[11]" position="before">
            <div class="pos-receipt-order-data">
                <t t-if="o.cufe_fel">
                    <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s' % ('QR',o.qr_fel)" style="width:140px;height:140px; float:right; text-align:right" /><br/>
                </t>
                CUFE: <t t-esc="props.data.cufe_fel"/>
            </div>
        </xpath>
    </t>
</templates>